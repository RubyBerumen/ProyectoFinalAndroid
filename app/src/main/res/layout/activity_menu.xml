<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_consultas"
        android:layout_width="123dp"
        android:layout_height="84dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/purple_700"
        android:onClick="abrirActivities"
        android:text="@string/btnConsultas"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/btn_cambios"
        app:layout_constraintTop_toBottomOf="@+id/btn_bajas" />

    <Button
        android:id="@+id/btn_bajas"
        android:layout_width="125dp"
        android:layout_height="87dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/purple_700"
        android:onClick="abrirActivities"
        android:text="@string/btnBajas"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/btn_altas"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_cambios"
        android:layout_width="118dp"
        android:layout_height="83dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/purple_700"
        android:onClick="abrirActivities"
        android:text="@string/btnCambios"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_altas" />

    <Button
        android:id="@+id/btn_altas"
        android:layout_width="117dp"
        android:layout_height="87dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/purple_700"
        android:onClick="abrirActivities"
        android:text="@string/btnAltas"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="72dp"
        android:hint="@string/txtSeleciona"
        android:textColorHint="#78909C"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>