<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="217dp"
        android:layout_height="37dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="80dp"
        android:text="@string/txtConsultas"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_NumeroDpto4"
        android:layout_width="238dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/cajaNumeroDepartamento"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Ubicacion4" />

    <EditText
        android:id="@+id/txt_Numero4"
        android:layout_width="234dp"
        android:layout_height="61dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/cajaNumero"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Nombre4" />

    <EditText
        android:id="@+id/txt_Nombre4"
        android:layout_width="234dp"
        android:layout_height="64dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/cajaNombre"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txt_Ubicacion4"
        android:layout_width="236dp"
        android:layout_height="47dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/cajaUbicacion"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Numero4"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginStart="112dp"
        android:layout_marginTop="18dp"
        android:enabled="false"
        android:text="@string/btnBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_NumeroDpto4" />

</androidx.constraintlayout.widget.ConstraintLayout>