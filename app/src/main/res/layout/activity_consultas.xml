<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="217dp"
        android:layout_height="37dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="80dp"
        android:text="@string/txtConsultas"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_Nombre4"
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="@string/cajaNombre4"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txt_NumeroDpto4"
        android:layout_width="238dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="@string/cajaNumeroDepartamento"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Ubicacion4" />

    <EditText
        android:id="@+id/txt_Ubicacion4"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="@string/cajaUbicacion4"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Numero4" />

    <EditText
        android:id="@+id/txt_Numero4"
        android:layout_width="232dp"
        android:layout_height="51dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="@string/cajaNumero"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Nombre4" />

    <Button
        android:id="@+id/btn_Buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="56dp"
        android:text="@string/btnBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_NumeroDpto4" />

</androidx.constraintlayout.widget.ConstraintLayout>